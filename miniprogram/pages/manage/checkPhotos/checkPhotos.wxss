page {
  width: 750rpx;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}

image {
  border-radius: 10rpx;
  width: 670rpx;
  height: 670rpx;
  background-color: #f7f7fa;
}

button {
  width: 45%;
  display: inline-block;
  font-size: 35rpx;
  box-sizing: border-box;
}

button.primary {
  background-color: #ffd101;
}

button + button {
  margin-left: 10%;
  /* float: right; */
}

button.long {
  margin: 20rpx 0 0 0;
  width: 100%;
}

.verify-box {
  box-sizing: border-box;
  padding: 50rpx 10rpx;
  margin-bottom: 50rpx;
  box-shadow: 0rpx 0rpx 30rpx #ddd;
  border-radius: 20rpx;
}

.label {
  font-size: 30rpx;
  font-weight: 400;
  margin: 10rpx 0;
}

#total-count {
  font-size: 30rpx;
  font-weight: 300;
  color: #888;
  box-shadow: 0rpx 0rpx 30rpx #ddd;
  padding: 30rpx;
  margin: 30rpx 0;
  border-radius: 10rpx;
}